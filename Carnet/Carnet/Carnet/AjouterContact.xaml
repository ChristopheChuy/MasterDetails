<Window x:Class="Carnet.AjouterContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Contact" Height="180" Width="300"
        Icon="Icone.ico">
    <DockPanel Background="#FFE6E6E6">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Nom : " Margin="25,0,0,0"/>
            <TextBox Name="AjNom" Margin="15,0,15,0"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Margin="0,15">
            <TextBlock Text="Prénom : " Margin="25,0,0,0"/>
            <TextBox Name="AjPrenom" Margin="15,0,15,0"/>
        </StackPanel>
        <WrapPanel DockPanel.Dock="Bottom"  VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Margin=" 8" Click="Fermer">Annuler</Button>
            <Button Margin=" 8" Click="Ajouter">Valider</Button>
        </WrapPanel>
    </DockPanel>
</Window>
